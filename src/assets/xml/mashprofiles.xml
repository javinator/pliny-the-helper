<?xml version="1.0" encoding="UTF-8"?>
<MASHS>
  <MASH>
    <NAME>Single Infusion, Default</NAME>
    <VERSION>1</VERSION>
    <GRAIN_TEMP>20</GRAIN_TEMP>
    <NOTES>Temperature mash for use when mashing in a brew pot over a heat source such as the stove. Use heat to
      maintain desired temperature during the mash.
    </NOTES>
    <MASH_STEPS>
      <MASH_STEP>
        <NAME>Saccharification</NAME>
        <VERSION>1</VERSION>
        <TYPE>Infusion</TYPE>
        <INFUSE_AMOUNT>10</INFUSE_AMOUNT>
        <STEP_TIME>60</STEP_TIME>
        <STEP_TEMP>66</STEP_TEMP>
      </MASH_STEP>
      <MASH_STEP>
        <NAME>Mash Out</NAME>
        <VERSION>1</VERSION>
        <TYPE>Temperature</TYPE>
        <STEP_TIME>15</STEP_TIME>
        <STEP_TEMP>75</STEP_TEMP>
        <DESCRIPTION>Heat to 75° C over 15 min</DESCRIPTION>
      </MASH_STEP>
    </MASH_STEPS>
  </MASH>
